<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="vertical">


    <TextView
        android:id="@+id/textView_add_nameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:text="@string/textView_default_text_name"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editText_add_name"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/textView_add_nameTitle"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="-12dp"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        android:layout_toEndOf="@+id/textView_add_nameTitle"
        android:layout_toRightOf="@+id/textView_add_nameTitle"
        android:ems="10"
        android:hint="@string/editTextName_hint"
        android:inputType="textPersonName" />


    <EditText
        android:id="@+id/editText_add_length"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView_add_length"
        android:layout_alignBottom="@+id/textView_add_length"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="-2dp"
        android:ems="10"
        android:inputType="number"
        android:text="16"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textView_add_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_add_advanced"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="16dp"
        android:paddingStart="?android:attr/expandableListPreferredChildPaddingLeft"
        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="Password length"
        android:textSize="18sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/button_add_generate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_add_custom_characters"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="140dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="24dp"
        android:text="@string/button_generate_text"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button_add_advanced"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_add_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="42dp"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="21dp"
        android:text="@string/button_advanced" />

    <Switch
        android:id="@+id/switch_add_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_add_length"
        android:layout_alignStart="@+id/textView_add_length"
        android:layout_alignLeft="@+id/textView_add_length"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="5dp"
        android:checked="true"
        android:paddingStart="?android:attr/expandableListPreferredChildPaddingLeft"
        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
        android:text="a-z                                                  "
        android:textSize="18sp"
        android:visibility="gone" />

    <Switch
        android:id="@+id/switch_add_big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switch_add_small"
        android:layout_alignStart="@+id/switch_add_small"
        android:layout_alignLeft="@+id/switch_add_small"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="5dp"
        android:checked="true"
        android:paddingStart="?android:attr/expandableListPreferredChildPaddingLeft"
        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
        android:text="A-Z                                                 "
        android:textSize="18sp"
        android:visibility="gone" />

    <Switch
        android:id="@+id/switch_add_numbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switch_add_big"
        android:layout_alignStart="@+id/switch_add_big"
        android:layout_alignLeft="@+id/switch_add_big"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="5dp"
        android:checked="true"
        android:paddingStart="?android:attr/expandableListPreferredChildPaddingLeft"
        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
        android:text="0-9                                                  "
        android:textSize="18sp"
        android:visibility="gone" />

    <Switch
        android:id="@+id/switch_add_basic_symbols"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switch_add_numbers"
        android:layout_alignStart="@+id/switch_add_numbers"
        android:layout_alignLeft="@+id/switch_add_numbers"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="5dp"
        android:checked="true"
        android:paddingStart="?android:attr/expandableListPreferredChildPaddingLeft"
        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
        android:text=".,-?:_!/;*+@()%                               "
        android:textSize="18sp"
        android:visibility="gone" />

    <Switch
        android:id="@+id/switch_add_advanced_symbols"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switch_add_basic_symbols"
        android:layout_alignStart="@+id/switch_add_basic_symbols"
        android:layout_alignLeft="@+id/switch_add_basic_symbols"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="5dp"
        android:checked="true"
        android:paddingStart="?android:attr/expandableListPreferredChildPaddingLeft"
        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
        android:text="|â‚¬$[]{}                                             "
        android:textSize="18sp"
        android:visibility="gone" />

    <EditText
        android:id="@+id/editText_add_custom_characters"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView_add_custom_characters"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="-6dp"
        android:ems="10"
        android:inputType="text"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textView_add_custom_characters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switch_add_advanced_symbols"
        android:layout_alignStart="@+id/switch_add_advanced_symbols"
        android:layout_alignLeft="@+id/switch_add_advanced_symbols"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="3dp"
        android:paddingStart="?android:attr/expandableListPreferredChildPaddingLeft"
        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="Custom characters:"
        android:textSize="18sp"
        android:visibility="gone" />

</RelativeLayout>



