<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout_list_item3"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editText_list_item3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView_list_item3"
        android:layout_marginStart="-195dp"
        android:layout_marginLeft="-195dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/textView_list_item3"
        android:layout_toRightOf="@+id/textView_list_item3"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView_list_item3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="213dp"
        android:layout_marginRight="213dp"
        android:paddingStart="?android:attr/expandableListPreferredChildPaddingLeft"
        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="Custom characters:"
        android:textSize="18sp" />
</RelativeLayout>