<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/recyclerImageView1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="2dp"
            app:srcCompat="@drawable/ic_adb" />

        <TextView
            android:id="@+id/recyclerTextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/recyclerImageView1"
            android:maxWidth="150dp"
            android:minWidth="150dp"
            android:text="Line 1"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/recyclerImageView2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toEndOf="@id/recyclerTextView1"
            android:padding="2dp"
            app:srcCompat="@drawable/ic_view" />

        <ImageView
            android:id="@+id/recyclerImageView3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toEndOf="@id/recyclerImageView2"
            android:padding="2dp"
            app:srcCompat="@drawable/ic_edit" />

        <ImageView
            android:id="@+id/recyclerImageView4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toEndOf="@id/recyclerImageView3"
            android:padding="2dp"
            app:srcCompat="@drawable/ic_delete" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>